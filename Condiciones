$products = DB::table('products')
                ->whereColumn('offer_price', 'main_price')
                ->get();

$products = DB::table('products')
                ->whereColumn('main_price', '>', 'offer_price')
                ->get();  

$products = DB::table('products')
                ->whereColumn([
                    ['offer_price', '=', 'main_price'],
                    ['updated_at', '>', 'created_at']
                ])->get();
